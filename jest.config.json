{
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.service.ts",
      "**/*.resolver.ts",
      "**/*.transaction.ts",
      "!**/*-identifier.**.ts",
      "!**/*-fraud.**.ts"
    ],
    "testPathIgnorePatterns": [
      "/core/interceptor/",
      "/anti-fraud/"
    ],
    "coverageDirectory": "../coverage",
    "clearMocks": true,
    "bail": true,
    "verbose": false,
    "collectCoverage": true,
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 65,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
        "^@core/(.*)$": "<rootDir>/core/$1",
        "^@resolver/(.*)$": "<rootDir>/resolver/$1",
        "^@transaction/(.*)$": "<rootDir>/transaction/$1",
        "^@commons/(.*)$": "<rootDir>/commons/$1"
    }
  }